{
  "appId": "salad-technologies-desktop-app",
  "productName": "Salad",
  "directories": {
    "output": "dist/app"
  },
  "files": ["dist/main/*"],
  "win": {
    "publish": {
      "provider": "s3",
      "bucket": "salad-app-releases"
    }
  },
  "nsis": {
    "allowToChangeInstallationDirectory": true,
    "artifactName": "${productName} Installer ${version}.${ext}",
    "license": "LICENSE.md",
    "oneClick": false
  },
  "linux": {
    "target": ["AppImage", "deb", "rpm", "snap"],
    "category": "Utility"
  },
  "rpm": {
    "depends": ["libappindicator1", "libnotify-bin"]
  }
}
