{
  "productName": "Salad",
  "appId": "salad-technologies-desktop-app",
  "directories": {
    "output": "release"
  },
  "nsis": {
    "installerIcon": "assets/favicon.ico",
    "uninstallerIcon": "assets/favicon.ico",
    "oneClick": false,
    "license": "LICENSE.md",
    "runAfterFinish": true,
    "allowToChangeInstallationDirectory": "true"
  },
  "files": ["assets/*", "dist/*"],
  "win": {
    "icon": "assets/favicon.ico",
    "target": ["nsis"],
    "sign": "./sign.js",
    "extraFiles": ["assets/*", "dist/salad-bowl"],
    "publish": {
      "provider": "s3",
      "bucket": "salad-app-releases"
    }
  },
  "mac": {
    "icon": "dist",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist",
    "target": ["AppImage"]
  }
}
