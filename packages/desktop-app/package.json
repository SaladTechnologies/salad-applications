  "electronWebpack": {
    "title": true,
    "staticSourceDirectory": "static",
    "main": {
      "extraEntries": [
        "@/preload.js"
      ],
      "sourceDirectory": "src"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "resolutions": {
    "systeminformation": "../../libs/systeminformation-4.27.8+salad.tgz"
  }
